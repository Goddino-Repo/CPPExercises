# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = LF
insert_final_newline = true
indent_style = tab
indent_size = tab
tab_width = 4
max_line_length = 120
trim_trailing_whitespace = true
ij_any_align_group_field_declarations = false
ij_any_spaces_around_additive_operators = true
ij_any_spaces_around_assignment_operators = true
ij_any_spaces_around_bitwise_operators = true
ij_any_spaces_around_equality_operators = true
ij_any_spaces_around_logical_operators = true
ij_any_spaces_around_multiplicative_operators = true
ij_any_spaces_around_relational_operators = true
ij_any_spaces_around_shift_operators = true
ij_any_spaces_around_unary_operator = true
ij_editorconfig_spaces_around_assignment_operators = true
ij_any_line_comment_add_space = true
ij_any_block_comment_add_space = true
ij_any_space_after_colon = true
ij_any_space_after_comma = true
ij_any_space_before_catch_parentheses = true
ij_any_space_before_for_parentheses = true
ij_any_space_before_if_parentheses = true
ij_any_space_before_method_call_parentheses = false
ij_any_space_before_method_parentheses = false
