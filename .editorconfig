ij_any_space_before_switch_left_brace = true
ij_any_space_before_try_left_brace = true
ij_any_space_before_while_left_brace = true
ij_any_space_before_while_keyword = true
ij_any_line_comment_add_space_on_reformat = true
ij_any_wrap_comments = true
ij_any_keep_first_column_comment = true
ij_any_block_comment_at_first_column = true
ij_any_line_comment_at_first_column = true
ij_any_wrap_long_lines = true
